android_app {
    name: "arcana-Updater",
    platform_apis: true,
    certificate: "platform",
    privileged: true,
    system_ext_specific: true,
    defaults: [
        "SettingsLibDefaults",
    ],
    srcs: [
        "src/**/*.java",
        "src/**/*.kt",
    ],
    required: [
        "privapp_whitelist_com.arcana.updater",
    ],
    static_libs: [
        "androidx.annotation_annotation",
        "androidx.appcompat_appcompat",
        "androidx-constraintlayout_constraintlayout",
        "androidx.core_core",
        "androidx.lifecycle_lifecycle-livedata",
        "androidx.lifecycle_lifecycle-reactivestreams",
        "androidx.lifecycle_lifecycle-service",
        "androidx.preference_preference",
        "androidx.work_work-runtime-latest",
        "dagger2",
        "gson-prebuilt-jar",
        "jsr330",
        "okhttp-4.9.2",
        "okhttp_logging-interceptor",
        "reactivestreams",
        "retrofit",
        "retrofit_converter-gson",
        "retrofit_converter-scalars",
        "rxandroid",
        "rxjava3",
    ],
    kotlincflags: [
        "-Xjvm-default=enable",
    ],
    plugins: [
        "dagger2-compiler",
    ],
}

prebuilt_etc {
    name: "privapp_whitelist_com.arcana.updater",
    sub_dir: "permissions",
    src: "privapp-permissions-updater.xml",
    filename_from_src: true,
    system_ext_specific: true,
}
